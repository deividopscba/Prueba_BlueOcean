pipeline {
    agent any
    stages {
        stage('Build') {
			parallel {
				stage('Web Api') {
					steps {
						script {
							dockerInstanceApp = sudo docker.build(imageNameApp, "./alimentos-webapi/Dockerfile ./alimentos-webapi")
						}
					}
				}
            }            
        }

    }

    environment {
		imageNameApp = 'deividopscba/alimentos-webapi'
    }

}	



